<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="47dp"
        android:onClick="c1_click"
        android:text="Los Angeles" />

    <Button
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/c1"
        android:layout_below="@+id/c1"
        android:layout_marginTop="28dp"
        android:onClick="c2_click"
        android:text="Toronto" />

    <Button
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/c2"
        android:layout_below="@+id/c2"
        android:layout_marginTop="38dp"
        android:onClick="c3_click"
        android:text="Reykjavik" />

    <Button
        android:id="@+id/c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/c3"
        android:layout_below="@+id/c3"
        android:layout_marginTop="20dp"
        android:onClick="c4_click"
        android:text="Minsk" />

    <Button
        android:id="@+id/c5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/c4"
        android:layout_below="@+id/c4"
        android:layout_marginTop="27dp"
        android:onClick="c5_click"
        android:text="Tokyo" />

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/c5"
        android:layout_below="@+id/c5"
        android:layout_marginTop="72dp"
        android:text="TextView" />

    <Button
        android:id="@+id/w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/t"
        android:layout_below="@+id/t"
        android:layout_marginTop="63dp"
        android:onClick="wartung_click"
        android:text="Wartung" />
</RelativeLayout>